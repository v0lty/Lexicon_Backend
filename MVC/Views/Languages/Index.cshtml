@model MVC.Models.LanguagesViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-5 pe-5">
    <div class="row">
        <div class="col align-self-end">
            <form class="p-0 m-0" asp-controller="Languages" asp-action="Search" method="post" id="searchForm">
                <div class="row">
                    <h3 class="pb-5">Languages Controller</h3>
                    <div class="input-group">
                        <input type="search" id="searchInput" name="search" class="form-control rounded-0" value="@Html.DisplayFor(c => c.Filter)" />
                        <input type="submit" id="searchButton" value="Search" class="btn btn-primary rounded-0 me-1" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3 justify-content-end border-start border-bottom p-2">

            <div class="row m-1 pb-2 border-bottom">
                <form class="m-0 p-0" id="createLanguageForm" method="post" asp-controller="Languages" asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div class="row px-2 py-1">
                        <input type="text" asp-for="CreateModel.Name" class="form-control custom-control-input form-control-sm rounded-0" placeholder="Name" id="nameInput" required>
                        <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-link p-0" value="Create" />
                </form>
            </div>

            <div class="row m-1 py-2">
                <form class="m-0 p-0" id="linkLanguageForm" method="post" asp-controller="Languages" asp-action="Link">
                    @Html.AntiForgeryToken()
                    <div class="row px-2 pb-1">
                        <select asp-for="LinkModel.Person" asp-items="ViewBag.People" class="form-select-sm rounded-0" id="peopleInput" placeholder="Person">
                            <option value="" selected disabled>Select Person</option>
                        </select>
                        <span asp-validation-for="LinkModel.Person" class="text-danger"></span>
                    </div>
                    <div class="row px-2 pb-1">
                        <select asp-for="LinkModel.Language" asp-items="ViewBag.Languages" class="form-select-sm rounded-0" id="languageInput" placeholder="Language">
                            <option value="" selected disabled>Select Language</option>
                        </select>
                        <span asp-validation-for="LinkModel.Language" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-link p-0" value="Link" />
                </form>
            </div>
        </div>
    </div>
    <div id="languagesPanel">
        <partial name="_LanguagesView" model=Model.Languages />
    </div>
</div>

<script>
    $('#searchForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#languagesPanel").html(result);
            }
        });
    });

    $('#createLanguageForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#languagesPanel").html(result);
                $("#nameInput").val('');
            },
            error: function (result) {
                alert(result.responseText);
            }
        });
    });

    $('#linkLanguageForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#languagesPanel").html(result);
                $("#peopleInput").val('');
                $("#languageInput").val('');
            },
            error: function (result) {
                alert(result.responseText);
            }
        });
    });
</script>