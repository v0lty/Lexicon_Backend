@model MVC.Models.PeopleViewModel

@{ ViewData["Title"] = "Index"; }
<div class="container-fluid px-5 pe-5">
    <div class="row">
        <div class="col align-self-end">
            <form class="p-0 m-0" id="searchForm" asp-controller="People" asp-action="Search" method="post">
                <div class="row">
                    <h3 class="pb-5">People Controller</h3>
                    <div class="input-group">
                        <input type="search" id="searchInput" name="search" class="form-control rounded-0" value="@Html.DisplayFor(model => model.Filter)" />
                        <input type="submit" id="searchButton" value="Search" class="btn btn-primary rounded-0 me-1" />
                        <input type="button" id="peopleButton" value="People" onclick="peopleClick()" class="btn btn-secondary rounded-0 me-1" />
                        <input type="button" id="detailButton" value="Detail" onclick="detailClick()" class="btn btn-info rounded-0 me-1 text-light" />
                        <input type="button" id="deleteButton" value="Delete" onclick="deleteClick()" class="btn btn-danger rounded-0 me-1" />
                    </div>
                </div>
            </form>
        </div>
        <div id="personCreatePanel" class="col-3 justify-content-end border-start border-bottom">
            <partial name="_PersonCreateView" model="Model.CreateViewModel" />
        </div>
    </div>
    <div id="peoplePanel">
        <partial name="_PeopleView" model=Model.People />
    </div>
</div>
<script>
    $('#searchForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#peoplePanel").html(result);
            }
        });
    });

    function peopleClick() {
        $.ajax({
            url: 'People/List',
            type: 'GET',
            data: '',
            success: function (result) {
                $("#peoplePanel").html(result);
            }
        });
    }

    function detailClick() {
        $.ajax({
            url: 'People/Details',
            type: 'POST',
            data: { id: $(searchInput).val() },
            success: function (result) {
                $("#peoplePanel").html("<br />" + result);
            },
            error: function (result) {
                $("#peoplePanel").html("<p class='text-danger'><strong>" + result.responseText + "</strong></p>");
            }
        });
    }

    function deleteClick() {
        $.ajax({
            url: 'People/RemoveWithConfirmation',
            type: 'POST',
            data: { id: $(searchInput).val() },
            success: function (result) {
                $("#peoplePanel").html("<br /><p><strong>" + result + "</strong></p>");
            },
            error: function (result) {
                $("#peoplePanel").html("<p class='text-danger'><strong>" + result.responseText + "</strong></p>");
            }
        });
        $('#searchInput').val('');
    }
</script>
