@model MVC.Models.PeopleViewModel

@{ ViewData["Title"] = "Index"; }
<div class="container-fluid px-5 pe-5">
    <div class="row">
        <div class="col align-self-end pe-2">
            <form class="p-0 m-0" id="searchUserForm" asp-controller="People" asp-action="Search" method="post">
                <div class="row">
                    <h3 class="pb-5">People Controller</h3>
                    <div class="input-group">
                        <input type="search" name="filter" class="form-control rounded-0" value="@Html.DisplayFor(model => model.Filter)" />
                        <input type="submit" class="btn btn-primary rounded-0" value="Search" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3 justify-content-end border-start ">
            <form class="m-0 p-0" id="createUserForm" method="post" asp-controller="People" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="row px-2 py-1">
                    <input type="text" class="form-control form-control-sm rounded-0" asp-for="CreateViewModel.Name" placeholder="Name" required>
                    <span asp-validation-for="CreateViewModel.Name" class="text-danger"></span>
                </div>
                <div class="row px-2 pb-1">
                    <input type="text" class="form-control form-control-sm rounded-0" asp-for="CreateViewModel.City" placeholder="City" required>
                    <span asp-validation-for="CreateViewModel.City" class="text-danger"></span>
                </div>
                <div class="row px-2 pb-1">
                    <input type="text" class="form-control form-control-sm rounded-0" asp-for="CreateViewModel.PhoneNumber" placeholder="Phone Number" required>
                    <span asp-validation-for="CreateViewModel.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="row px-2">
                    <input type="submit" class="btn btn-secondary rounded-0" value="Create" />
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-borderless table-light table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.People.FirstOrDefault().Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.People.FirstOrDefault().Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.People.FirstOrDefault().City)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.People.FirstOrDefault().PhoneNumber)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.People)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.ActionLink("Remove", "Remove", "People", new { id = item.Id }, null)
                    <td>
                </tr>
            }
        </tbody>
    </table>
</div>
