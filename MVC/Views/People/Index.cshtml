@model MVC.Models.PeopleViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-5 pe-5">
    <div class="row">
        <div class="col align-self-end">
            <form class="p-0 m-0" asp-controller="People" asp-action="Search" method="post" id="searchForm">
                <div class="row">
                    <h3 class="pb-5">People Controller</h3>
                    <div class="input-group">
                        <input type="search" id="searchInput" name="search" class="form-control rounded-0" value="@Html.DisplayFor(p => p.Filter)" />
                        <input type="submit" id="searchButton" value="Search" class="btn btn-primary rounded-0 me-1" />
                        <input type="button" id="peopleButton" value="People" onclick="onPeopleClick()" class="btn btn-secondary rounded-0 me-1" />
                        <input type="button" id="detailButton" value="Detail" onclick="onDetailClick()" class="btn btn-info rounded-0 me-1 text-light"/>
                        <input type="button" id="deleteButton" value="Delete" onclick="onDeleteClick()" class="btn btn-danger rounded-0 me-1" />
                    </div>
                </div>
            </form>
        </div>
        <div id="personCreatePanel" class="col-3 justify-content-end border-start border-bottom">   
            <form class="m-0 p-0" id="createUserForm" method="post" asp-controller="People" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="row px-2 py-1">
                    <input type="text" asp-for="CreateModel.Name" class="form-control custom-control-input form-control-sm rounded-0" placeholder="Name" id="nameInput" required>
                    <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
                </div>
                <div class="row px-2 pb-1">
                    <select asp-for="CreateModel.City" asp-items="ViewBag.Cities" class="form-select-sm rounded-0" id="cityInput" placeholder="City">
                        <option value="" selected disabled>Select City</option>
                    </select>
                </div>
                <div class="row px-2 pb-1">
                    <input type="text" asp-for="CreateModel.PhoneNumber" class="form-control form-control-sm rounded-0" placeholder="Phone Number" aria-describedby="username_required" id="phoneInput" required>
                    <span asp-validation-for="CreateModel.PhoneNumber" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-link p-0" value="Create" />
            </form>
        </div>
    </div>
    <div id="peoplePanel">
        <partial name="_PeopleView" model=Model.People />
    </div>    
</div>

<script>
    $('#searchForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#peoplePanel").html(result);
            }
        });
    });

    $('#createUserForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#peoplePanel").html(result);
                $("#nameInput").val('');
                $("#cityInput").val('');
                $("#phoneInput").val('');
            }
        });
    });

    function onPeopleClick() {
        $.ajax({
            url: 'People/List',
            type: 'GET',
            data: '',
            success: function (result) {
                $("#peoplePanel").html(result);
            }            
        });
    }

    function onDetailClick() {
        $.ajax({
            url: 'People/Details',
            type: 'POST',
            data: { id: $(searchInput).val() },
            success: function (result) {
                $("#peoplePanel").html("<br />" + result);
            },
            error: function (result) {
                $("#peoplePanel").html("<p class='text-danger'><strong>" + result.responseText + "</strong></p>");
            }
        });
    }

    function onDeleteClick() {
        $.ajax({
            url: 'People/Delete',
            type: 'POST',
            data: { id: $(searchInput).val() },
            success: function (result) {
                $("#peoplePanel").html("<br /><p><strong>" + result + "</strong></p>");
            },
            error: function (result) {
                $("#peoplePanel").html("<p class='text-danger'><strong>" + result.responseText + "</strong></p>");
            }
        });
        $('#searchInput').val('');        
    }
</script>