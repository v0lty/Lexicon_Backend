@model MVC.Models.PeopleViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-5">
    <div class="position-absolute">
        <h3>People</h3>
    </div>
    <div class="row">
        <div class="col align-self-end">
            <form class="p-0 m-0" asp-controller="People" asp-action="Search" method="post" id="searchForm">    
                <div class="input-group">
                    <input type="search" id="searchInput" name="search" class="form-control rounded-0" value="@Html.DisplayFor(p => p.Filter)" />
                    <input type="submit" id="searchButton" value="Search" class="btn btn-primary rounded-0 me-1" />
                </div>            
            </form>
        </div>
        <div id="personCreatePanel" class="col-3 justify-content-end border-start border-bottom">
            <form class="m-0 p-0" id="createUserForm" method="post" asp-controller="People" asp-action="Create">
                @Html.AntiForgeryToken()
                <partial name="_PersonView" model=Model.CreateModel />
                <input type="submit" class="btn btn-link p-0" value="Create" />
            </form>
        </div>
    </div>
    <div id="peoplePanel" class="pt-2">
        <partial name="_PeopleView" model=Model.People />
    </div>
</div>

<script>
    $('#searchForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#peoplePanel").html(result);
            }
        });
    });
    $('#createUserForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function (result) {
                $("#peoplePanel").html(result);
                $("#nameInput").val('');
                $("#cityInput").val('');
                $("#phoneInput").val('');
            }
        });
    });
</script>