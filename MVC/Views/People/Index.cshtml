@model MVC.Models.PeopleViewModel

@{ ViewData["Title"] = "Index"; }
<div class="container-fluid px-5 pe-5">
    <div class="row">
        <div class="col align-self-end pe-2">
            <form class="p-0 m-0" id="searchUserForm" asp-controller="People" asp-action="Search" method="post">
                <div class="row">
                    <h3 class="pb-5">People Controller</h3>
                    <div class="input-group">
                        <input type="search" name="filter" class="form-control rounded-0" value="@Html.DisplayFor(model => model.Filter)" />
                        <input type="submit" class="btn btn-primary rounded-0" value="Search" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3 justify-content-end border-start ">
            <form class="m-0 p-0" id="createUserForm" method="post" asp-controller="People" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="row px-2 py-1">
                    <input type="text" asp-for="CreateViewModel.Name" class="form-control custom-control-input form-control-sm rounded-0" placeholder="Name" required>
                    <span asp-validation-for="CreateViewModel.Name" class="text-danger"></span>
                </div>
                <div class="row px-2 pb-1">
                    <input type="text" asp-for="CreateViewModel.City" class="form-control form-control-sm rounded-0" placeholder="City" required>
                    <span asp-validation-for="CreateViewModel.City" class="text-danger"></span>
                </div>
                <div class="row px-2 pb-1">
                    <input type="text" asp-for="CreateViewModel.PhoneNumber" class="form-control form-control-sm rounded-0" placeholder="Phone Number" aria-describedby="username_required" required>
                    <span asp-validation-for="CreateViewModel.PhoneNumber" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-link p-0" value="Create" />
            </form>
        </div>
    </div>
    <div id="persons_panel">
        <partial name="_PeopleView" model=Model.People />
    </div>
</div>
